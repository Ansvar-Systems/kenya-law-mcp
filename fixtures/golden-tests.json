{
  "$schema": "./golden-tests.schema.json",
  "version": "1.0",
  "mcp_name": "Kenya Law MCP",
  "description": "Golden contract tests for the Kenya Law MCP covering data protection, cybercrimes, ICT, companies, and consumer protection legislation",
  "tests": [
    {
      "id": "ke-001",
      "category": "article_retrieval",
      "description": "Retrieve Section 2 of the Data Protection Act 2019 — interpretation/definitions including personal data and data subject",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Data Protection Act 2019",
        "article": "2"
      },
      "assertions": {
        "result_not_empty": true,
        "text_contains": ["personal data", "data subject"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "ke-002",
      "category": "article_retrieval",
      "description": "Retrieve Section 3 of the Computer Misuse and Cybercrimes Act 2018 — application of the Act",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Computer Misuse and Cybercrimes Act 2018",
        "article": "3"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["computer", "cyber"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "ke-003",
      "category": "article_retrieval",
      "description": "Retrieve Section 1 of the Companies Act 2015 — short title",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Companies Act 2015",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["Companies Act", "2015"],
        "fields_present": ["text"],
        "text_not_empty": true
      }
    },
    {
      "id": "ke-004",
      "category": "search",
      "description": "Full-text search for 'personal data' returns Data Protection Act provisions",
      "tool": "search_legislation",
      "input": {
        "query": "personal data"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["Data Protection Act", "personal data", "data subject"]
      }
    },
    {
      "id": "ke-005",
      "category": "search",
      "description": "Full-text search for 'cybercrime' returns Computer Misuse and Cybercrimes Act provisions",
      "tool": "search_legislation",
      "input": {
        "query": "cybercrime"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["Computer Misuse and Cybercrimes Act", "cybercrime", "computer"]
      }
    },
    {
      "id": "ke-006",
      "category": "search",
      "description": "Full-text search for 'electronic transaction' returns ICT Act provisions",
      "tool": "search_legislation",
      "input": {
        "query": "electronic transaction"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["Information and Communications", "electronic", "transaction"]
      }
    },
    {
      "id": "ke-007",
      "category": "citation_roundtrip",
      "description": "Citation for Data Protection Act 2019 Section 25 (principles) includes kenyalaw.org URL pattern",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Data Protection Act 2019",
        "article": "25"
      },
      "assertions": {
        "result_not_empty": true,
        "citation_url_pattern": "kenyalaw\\.org",
        "text_not_empty": true
      }
    },
    {
      "id": "ke-008",
      "category": "citation_roundtrip",
      "description": "Citation for Companies Act 2015 Section 3 includes official identifier",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Companies Act 2015",
        "article": "3"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["text"],
        "text_not_empty": true
      }
    },
    {
      "id": "ke-009",
      "category": "eu_cross_reference",
      "description": "Data Protection Act 2019 cross-reference to GDPR — Kenya's DPA was significantly influenced by GDPR",
      "tool": "get_provision_eu_basis",
      "input": {
        "law_identifier": "Data Protection Act 2019"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["GDPR", "General Data Protection Regulation", "2016/679", "data protection"]
      }
    },
    {
      "id": "ke-010",
      "category": "eu_cross_reference",
      "description": "Computer Misuse and Cybercrimes Act 2018 cross-reference to Budapest Convention on Cybercrime",
      "tool": "get_provision_eu_basis",
      "input": {
        "law_identifier": "Computer Misuse and Cybercrimes Act 2018"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["Budapest Convention", "Convention on Cybercrime", "cybercrime", "Council of Europe"]
      }
    },
    {
      "id": "ke-011",
      "category": "negative_test",
      "description": "Non-existent Kenyan Act returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Fictional Wildlife Cyber Act 2099",
        "article": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "ke-012",
      "category": "negative_test",
      "description": "Malformed section number returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Data Protection Act 2019",
        "article": "999ZZZ-INVALID"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}
